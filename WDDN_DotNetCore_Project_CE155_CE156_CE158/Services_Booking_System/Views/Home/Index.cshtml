@model IEnumerable<Services_Booking_System.Models.Service>

@{
    ViewData["Title"] = "Index";

}

@*<h1>Index</h1>*@
<style>
    .card {
        -webkit-transition: 0.5s;
        transition: 0.5s;
    }
    .card:hover{
        -webkit-transform: scale(1.1);
        transform: scale(1.1);
    }
</style>
<flash bootstrap-version="5.1.3" dismissable="true" />
<h3>Services</h3>
<small>Click on any service to view all related services and start Booking</small><br /><br /><br />
<div class="card-deck">
    @foreach (var item in Model)
    {
        var PhotoPath = "/ServiceImages/" + item.ServiceImage;
        @*<button onclick="location.href='@Url.Action("List", "SubServices",new {ServiceId=item.Id })'">kk</button>*@
        <div class="card m-3 " style="max-width:30.5%;min-width:18rem;" onclick="location.href='@Url.Action("List", "SubServices",new {ServiceId=item.Id })'">
            <div class="card-header text-center ">
                <h3>@item.ServiceName</h3>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top"  src="@PhotoPath" asp-append-version="true" />
            </div>

            <div class="card-footer text-center">                
                <a asp-action="List" asp-controller="SubServices" class="btn btn-primary m-1" asp-route-ServiceId="@item.Id">View All Services</a>
            </div>
        </div>

    }
</div>

