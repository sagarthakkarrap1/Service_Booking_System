@model Services_Booking_System.ViewModels.ServiceCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">

                <label asp-for="ServiceName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ServiceName" class="form-control" />
                    <span asp-validation-for="ServiceName" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <label asp-for="ServiceImage" class="col-sm-5 control-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="ServiceImage" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose File...</label>
                        <span asp-validation-for="ServiceName" class="text-danger"></span>
                    </div>

                </div>

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

