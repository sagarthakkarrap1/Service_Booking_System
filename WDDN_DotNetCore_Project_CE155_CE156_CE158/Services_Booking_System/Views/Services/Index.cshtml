@model IEnumerable<Services_Booking_System.Models.Service>

@{
    ViewData["Title"] = "Index";

}

@*<h1>Index</h1>*@
<flash dismissable="true" />
<p>
    <a asp-action="Create">Create New Service</a>
</p>

<div class="card-deck">
    @foreach (var item in Model)
    {
        var PhotoPath = "/ServiceImages/" + item.ServiceImage;
        <div class="card m-3 " style="min-width:18rem;max-width:30.5%;">
            <div class="card-header text-center ">
                <h3>@item.ServiceName</h3>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" style="width:250px" src="@PhotoPath" asp-append-version="true" />
            </div>

            <div class="card-footer text-center">
                <a asp-action="Edit" class="btn btn-primary m-1" asp-route-id="@item.Id">Edit</a>
                @*<a asp-action="Details" class="btn btn-success m-1" asp-route-id="@item.Id">Details</a>*@
                <a asp-action="Delete" class="btn btn-danger m-1" asp-route-id="@item.Id">Delete</a>
                <a asp-action="List" asp-controller="SubServices" class="btn btn-success m-1" asp-route-ServiceId="@item.Id">View All Services</a>
            </div>
        </div>

    }
</div>

