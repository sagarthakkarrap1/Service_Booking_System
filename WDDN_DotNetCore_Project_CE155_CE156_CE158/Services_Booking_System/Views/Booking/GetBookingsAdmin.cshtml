@model IEnumerable<Services_Booking_System.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings Of All Customers</h1>

<div>
    <hr />
    @if (Model.Count() == 0)
    {
        <div>No Bookings found!</div>

    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubService.SubServiceName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ApplicationUser.UserName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubService.SubServiceName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }


    </div>
